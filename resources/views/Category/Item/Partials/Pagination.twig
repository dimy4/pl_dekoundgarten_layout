{% if pageMax > 1 %}
    <nav class="cmp cmp-paginator row">
        <div class="text-xs-center col-xs-12">
            <ul class="pagination m-y-0">

                <!-- PREV LINK -->
                <li class="page-item{% if page == 1 %} disabled{% endif %}">
                    <a class="page-link ctr" href="?{{ query | merge({'page' : page-1 }) | url_encode }}">
                        <i class="fa fa-sort-asc fa-rotate-270" aria-hidden="true"></i>Vorherige Seite
                    </a>
                </li>
                <!-- ./PREV LINK -->

                <!-- FIRST PAGE LINK -->
                {% if page > 2 and config('Ceres.pagination.showFirstPage') == "true" %}
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : 1 }) | url_encode }}">1</a>
                    </li>
                    <li class="page-item page-link">...</li>
                {% endif %}
                <!-- ./FIRST PAGE LINK -->

                <!-- PAGINATION -->
                {% if page == pageMax and page > 2 %}
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : page-2 }) | url_encode }}">{{ page - 2 }}</a>
                    </li>
                {% endif %}

                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : page-1 }) | url_encode }}">{{ page - 1 }}</a>
                    </li>
                {% endif %}

                <li class="page-item active">
                    <a class="page-link">{{ page }}</a>
                </li>

                {% if page+1 <= pageMax %}
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : page+1 }) | url_encode }}">{{ page + 1 }}</a>
                    </li>
                {% endif %}

                {% if page == 1 and page+2 <= pageMax %}
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : page+2 }) | url_encode }}">{{ page + 2 }}</a>
                    </li>
                {% endif %}
                <!-- ./PAGINATION -->

                <!-- LAST PAGE LINK -->
                {% if pageMax > 3 and page < pageMax-1 and config('Ceres.pagination.showLastPage') == "true" %}
                    <li class="page-item page-link">...</li>
                    <li class="page-item">
                        <a class="page-link"
                        href="?{{ query | merge({'page' : pageMax }) | url_encode }}">{{ pageMax }}</a>
                    </li>
                {% endif %}
                <!-- ./LAST PAGE LINK -->

                <!-- NEXT LINK -->
                <li class="page-item{% if page == pageMax %} disabled{% endif %}">
                    <a class="page-link ctr"
                    href="?{{ query | merge({'page' : page+1 }) | url_encode }}">
                        NÃ¤chste Seite<i class="fa fa-sort-asc fa-rotate-90" aria-hidden="true"></i>
                    </a>
                </li>
                <!-- ./NEXT LINK -->
            </ul>
        </div>
    </nav>
{% endif %}