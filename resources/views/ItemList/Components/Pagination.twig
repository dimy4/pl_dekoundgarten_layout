<script type="x/template" id="vue-pagination">
    <nav class="cmp cmp-paginator row" v-if="pageMax > 1">
        <div class="text-xs-center col-xs-12">
            <ul class="pagination m-y-0">

                <!-- PREV LINK -->
                <li class="page-item" :class="{'disabled': page <= 1}">
                    <a class="page-link ctr" @click="setPage(page-1)">
                        <i class="fa fa-sort-asc fa-rotate-270" aria-hidden="true"></i>Vorherige Seite
                    </a>
                </li>
                <!-- ./PREV LINK -->

                <!-- FIRST PAGE LINK -->
                {% if config('Ceres.pagination.showFirstPage') == "true" %}
                    <li class="page-item" v-if="page > 2">
                        <a class="page-link" @click="setPage(1)">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        </a>
                    </li>
                {% endif %}
                <!-- ./FIRST PAGE LINK -->

                <!-- PAGINATION -->
                <li class="page-item" v-if="page === pageMax && page > 2">
                    <a class="page-link" @click="setPage(page - 2)">${ page - 2 }</a>
                </li>

                <li class="page-item" v-if="page > 1">
                    <a class="page-link" @click="setPage(page - 1)">${ page - 1 }</a>
                </li>

                <li class="page-item active">
                    <a class="page-link">${ page }</a>
                </li>

                <li class="page-item" v-if="page + 1 <= pageMax">
                    <a class="page-link" @click="setPage(page + 1)">${ page + 1 }</a>
                </li>

                <li class="page-item" v-if="page === 1 && page + 2 <= pageMax">
                    <a class="page-link" @click="setPage(page + 2)">${ page + 2 }</a>
                </li>
                <!-- ./PAGINATION -->

                <!-- LAST PAGE LINK -->
                {% if config('Ceres.pagination.showLastPage') == "true" %}
                    <li class="page-item" v-if="pageMax > 3 && page < pageMax - 1">
                        <a class="page-link" @click="setPage(pageMax)">
                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        </a>
                    </li>
                {% endif %}
                <!-- ./LAST PAGE LINK -->

                <!-- NEXT LINK -->
                <li class="page-item" :class="{'disabled': page >= pageMax}">
                    <a class="page-link ctr" @click="setPage(page + 1)">
                        NÃ¤chste Seite<i class="fa fa-sort-asc fa-rotate-90" aria-hidden="true"></i>
                    </a>
                </li>
                <!-- ./NEXT LINK -->
            </ul>
        </div>
    </nav>
</script>
